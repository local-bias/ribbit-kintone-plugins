{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "pnpm run build:styles && pnpm run build:components",
    "build:styles": "pnpm dlx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev": "concurrently \"pnpm run dev:styles\" \"pnpm run dev:components\"",
    "dev:styles": "pnpm dlx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.3",
    "@types/node": "^22.15.17",
    "@types/react": "workspace:*",
    "@types/react-dom": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint": "^9.26.0",
    "tailwindcss": "^4.1.12",
    "typescript": "latest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/css": "^11.13.5",
    "@emotion/styled": "^11.14.0",
    "@konomi-app/k2": "workspace:*",
    "@konomi-app/ui-react": "^2.0.0",
    "@mui/material": "^7.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@repo/constants": "workspace:*",
    "@repo/tailwindcss": "workspace:*",
    "@repo/utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "lucide-react": "^0.509.0",
    "react": "workspace:*",
    "react-dom": "workspace:*",
    "react-error-boundary": "^6.0.0",
    "react-resizable-panels": "^3.0.1",
    "tailwind-merge": "^3.3.1",
    "tunnel-rat": "^0.1.2",
    "tw-animate-css": "^1.3.7"
  }
}
