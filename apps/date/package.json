    "@repo/jotai": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.1.0",
    "jotai": "^2.16.0",
    "jotai-derive": "^0.1.3",
    "jotai-eager": "^0.2.3",
    "lucide-react": "^0.562.0",
    "luxon": "^3.7.2",
